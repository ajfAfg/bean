{erl_opts, [debug_info]}.

{deps, []}.

{dialyzer,
 [{warnings,
   [no_return,
    no_unused,
    no_improper_lists,
    no_fun_app,
    no_match,
    no_opaque,
    no_fail_call,
    no_contracts,
    no_behaviours,
    no_undefined_callbacks,
    unmatched_returns,
    error_handling,
    overspecs,
    underspecs,
    specdiffs]},
  {get_warnings, true},
  {plt_apps, top_level_deps}]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  locals_not_used,
  exports_not_used,
  deprecated_function_calls,
  deprecated_functions]}.
